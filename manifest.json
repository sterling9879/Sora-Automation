{
  "manifest_version": 3,
  "name": "Sora Queue Manager",
  "version": "2.0.0",
  "description": "Gerenciador de fila de prompts para Sora - máximo 3 gerações simultâneas",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://sora.chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://sora.chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
